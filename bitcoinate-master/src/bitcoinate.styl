.bitcoinate
	background-image: linear-gradient(rgb(247, 147, 26), rgb(193, 108, 7))
	font: 900 12px/18px Arial, sans-serif
	color: rgb(255,255,255)
	text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.5)
	border: 1px solid rgb(193, 108, 7)
	margin: 0
	cursor: pointer
	&:hover,
	&:focus
		background-image: linear-gradient(rgb(248, 158, 52), rgb(232, 130, 8))
	span
		background-repeat: no-repeat
		display: inline-block
		vertical-align: middle
		position: relative
		margin: 0 4px 0 0

.bitcoinate[data-size="20"]
	padding: 0 3px
	border-radius: 2px
	&:active
		box-shadow: inset 0 0 4px rgba(0, 0, 0, 0.5)
	span
		background-image: url('img/bitcoinate20.png')
		width: 10px
		height: 14px
		bottom: 2px

.bitcoinate[data-size="30"]
	padding: 0 8px
	font-size: 18px
	line-height: 28px
	border-radius: 4px
	&:active
		box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.5)
	span
		background-image: url('img/bitcoinate30.png')
		width: 15px
		height: 22px
		bottom: 2px

.bitcoinate[data-size="50"]
	padding: 0 12px
	font-size: 32px
	line-height: 48px
	border-radius: 5px
	text-shadow: 0 -2px 0 rgba(0, 0, 0, 0.5)
	&:active
		box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.5)
	span
		background-image: url('img/bitcoinate50.png')
		width: 25px
		height: 36px
		margin: 0 8px 0 0
		bottom: 4px